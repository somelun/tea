let mut i = 0;
let mut sum = 0;

// Simple while loop
while i < 10 {
    sum = sum + i;
    i = i + 1;
}

// While loop with complex condition
let mut x = 5;
let mut y = 0;

while x > 0 {
    y = y + x;
    x = x - 1;
}

// Nested while loops
let mut outer = 0;
let mut inner = 0;

while outer < 3 {
    inner = 0;
    while inner < 2 {
        inner = inner + 1;
    }
    outer = outer + 1;
} 